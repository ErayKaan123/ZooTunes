@inject IDialogService dialogService
@inject ISnackbar snackbar 
<MudStack Class="mx-4 mb-24" Justify="Justify.Center">
    <MudImage Class="rounded-lg mb-1" Src="@AnimalData.Image"/>
    <MudGrid>
        <MudItem xs="7" md="7">
            <MudText Class="font-bold" Typo="Typo.h5">@AnimalData.AnimalName</MudText>
            <MudText Typo="Typo.body1" Color="Color.Secondary">@AnimalData.ScienetificName</MudText>
        </MudItem>

        <MudItem xs="5" md="5">
            <MudStack Spacing="0" Class="mt-n2" Row="true">
                <MudIconButton OnClick="ToggleFavorite" Size="Size.Large" Color="@(AnimalData.IsFavorite ? Color.Error : Color.Inherit)" Icon="@Icons.Material.Filled.Favorite"/>
                <MudIconButton OnClick="OpenAnimalDescription" Size="Size.Large" Color="Color.Inherit" Icon="@Icons.Material.Filled.Info"/>
            </MudStack>
        </MudItem>
    </MudGrid>
    
    <audio class="mt-12 w-full" controls="">
        @foreach (var sound in AnimalData.Sounds)
        {
            <source
                src="@sound.Key"
                type="@sound.Value">
        }
        Your browser does not support the audio element.
    </audio>
</MudStack>