@page "/favorites"
@using ZooTunes.Client.Animals
<div style="height: fit-content" class="flex justify-start items-center bg-black text-white py-2 px-4 fixed top-0 left-0 w-full z-100">
    <MudImage Src="images/logo.png" Height="70" Width="70"></MudImage>
    <h1 onfocus="blur()" class="text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-5xl lg:text-6xl dark:text-white ml-5">Your favorites</h1>
</div>
<div class="mt-14 mb-0"></div>
@foreach (var animal in AnimalDataRepository.Data.Where(x => x.IsFavorite))
{
    <SmallAnimalDisplay AnimalData="animal" OnStateChanged="HandleStateChanged"/>
}
@code{
    private void HandleStateChanged()
    {
        StateHasChanged();
    }
}